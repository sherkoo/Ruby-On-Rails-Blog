<div class="container">
  <div class="row">
    <div class="col-4 col-center">
      <h1>New Article</h1>

      <%= form_for @article do |f| %>
      <%= f.label :title, class: "form__input" %>
        <%= f.text_field :title %>
        <%= f.label :body %>
        <%= f.text_area :body %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>