<div class="container">
  <div class="row">
    <div class="col-4">
      <h1>Articles</h1>

      <% @articles.each do |article| %>
        <article>
          <h2><%= link_to(article.title, article) %></h2>
          <small><%= article.created_at %></small>
          <p><%= truncate(article.body, length: 250) %></p>
        </article>
      <% end %>
    </div>
  </div>
</div>